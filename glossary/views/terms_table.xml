<odoo>
<template id="terms_table" inherit_id="website.slide_fullscreen">
    <xpath expr="//div[@id='wrapwrap']" position="inside">
        <div class="container">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Término</td>
                        <td>Descripción</td>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="terms" t-as="term">
                        <tr>
                            <td><t t-esc="term.name"/></td>
                            <td><t t-esc="term.description"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>             
        </div>
    </xpath>
</template>
</odoo>