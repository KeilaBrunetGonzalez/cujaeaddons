<odoo>
    <record id="view_glossary_term_form" model="ir.ui.view">
        <field name="name">glossary.term.form</field>
        <field name="model">glossary.term</field>
        <field name="arch" type="xml">
            <form string="Términos del glosario">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="glossary_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_glossary_term_tree" model="ir.ui.view">
        <field name="name">glossary.term.tree</field>
        <field name="model">glossary.term</field>
        <field name="arch" type="xml">
            <tree string="Términos del glosario" editable="bottom" default_order="name asc">
                <field name="name"/>
                <field name="description"/>
                <field name="glossary_id"/>
            </tree>
        </field>
    </record>
</odoo>
