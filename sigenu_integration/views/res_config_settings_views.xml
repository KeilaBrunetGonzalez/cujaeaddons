<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_sigenu" model="ir.ui.view">
        <field name="name">sigenu.integration.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" string="SIGENU">
                    <h2>SIGENU Integration</h2>
                    <div class="row mt16">
                        <div class="col-12">
                            <div class="o_setting_left_pane">
                                <label for="sigenu_username"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="text-muted mb16">
                                    Credenciales para la API de SIGENU.
                                </div>
                                <div class="mb16">
                                    <label for="sigenu_username"/>
                                    <field name="sigenu_username"/>
                                </div>
                                <div class="mb16">
                                    <label for="sigenu_password"/>
                                    <field name="sigenu_password"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>