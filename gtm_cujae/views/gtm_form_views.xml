<odoo>
    <record id="gtm_form_view" model="ir.ui.view">
        <field name="name">Agregar formulario de viaje a Helpdesk Ticket</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="inside">
                <field name="travel_form_id"
                       string="Formulario de viaje"
                       placeholder="Selecciona el formulario de viaje"/>
                <field name="travel_expense_id" invisible="1"/>
                <button
                    name="action_open_expense"
                    string="Gestionar Planilla de Costos"
                    type="object"
                    class="oe_highlight"
                    attrs="{'invisible': [('travel_expense_id', '!=', False)]}"
                />
                <field
                    name="travel_expense_id"
                    readonly="1"
                    attrs="{'invisible': [('travel_expense_id', '=', False)]}"
                    widget="many2one_clickable"
                />
            </xpath>
        </field>
    </record>

    <record id="view_ticket_pcc_validation_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.pcc.validation.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group col="4" string="Validación PCC" groups="gtm_cujae.group_pcc_validator">
                    <field name="pcc_validated"/>
                    <field name="validation_notes"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_ticket_ujc_validation_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.ujc.validation.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group col="4" string="Validación UJC" groups="gtm_cujae.group_ujc_validator">
                    <field name="ujc_validated"/>
                    <field name="validation_notes"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
